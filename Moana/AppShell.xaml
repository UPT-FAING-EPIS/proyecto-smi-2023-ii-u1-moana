<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Moana.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Moana.Pages"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="HomePage" />
    <ShellContent
        Title="SearchWound"
        ContentTemplate="{DataTemplate pages:SearchWound}"
        Route="SearchWound" />
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />
    <ShellContent
        Title="UserHomePage"
        ContentTemplate="{DataTemplate pages:UserHomePage}"
        Route="UserHomePage" />
    <ShellContent
        Title="ListadoPacientes"
        ContentTemplate="{DataTemplate pages:ListadoPacientes}"
        Route="ListadoPacientes" />
    <ShellContent
        Title="Prescripciones"
        ContentTemplate="{DataTemplate pages:Prescripciones}"
        Route="Prescripciones" />
</Shell>
