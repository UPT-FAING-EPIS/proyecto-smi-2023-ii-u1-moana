<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Moana.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Moana.View"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate view:MainPageView}"
        Route="MainPageView" />

    <TabBar Route="MedicoTab">
        <ShellContent
            Title="ListadoPacientes"
            ContentTemplate="{DataTemplate view:ListadoPacientes}"
            Icon="users"
            Route="ListadoPacientes" />

        <ShellContent
            Title="Prescripciones"
            ContentTemplate="{DataTemplate view:Prescripciones}"
            Icon="document"
            Route="Prescripciones" />
    </TabBar>

    <TabBar Route="PacienteTab">

        <ShellContent
            Title="UserHomePage"
            ContentTemplate="{DataTemplate view:UserHomePage}"
            Icon="home"
            Route="UserHomePage" />
        <ShellContent
            Title="SearchWound"
            ContentTemplate="{DataTemplate view:SearchWound}"
            Icon="search"
            Route="SearchWound" />
        <ShellContent
            Title="HorarioPastillas"
            ContentTemplate="{DataTemplate view:HorarioPastillas}"
            Icon="clock"
            Route="HorarioPastillas" />
    </TabBar>
</Shell>
