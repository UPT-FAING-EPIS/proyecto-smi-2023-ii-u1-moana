<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Moana.View.UserHomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="UserHomePage"
    NavigationPage.BackButtonTitle=""
    NavigationPage.HasNavigationBar="False">
    <VerticalStackLayout
        HorizontalOptions="FillAndExpand"
        Spacing="20"
        VerticalOptions="CenterAndExpand">
        <Label
            FontSize="24"
            HorizontalOptions="CenterAndExpand"
            Text="{Binding Saludo}"
            TextColor="Black" />

        <Button
            Command="{Binding PrescripcionesCommand}"
            HorizontalOptions="CenterAndExpand"
            Text="Ver mis prescripciones"
            VerticalOptions="End" />
        <Button
            Command="{Binding HorariosPastillasCommand}"
            HorizontalOptions="CenterAndExpand"
            Text="Ver mis horarios pastillas"
            VerticalOptions="End" />
        <Button
            HorizontalOptions="CenterAndExpand"
            Text="Tengo un problema"
            VerticalOptions="End" />

    </VerticalStackLayout>
</ContentPage>