<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Moana.View.MedicoHomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="HomePage"
    NavigationPage.BackButtonTitle=""
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False">
    <VerticalStackLayout
        HorizontalOptions="FillAndExpand"
        Spacing="20"
        VerticalOptions="CenterAndExpand">

        <Label
            FontSize="24"
            HorizontalOptions="CenterAndExpand"
            Text="{Binding Saludo}"
            TextColor="Black" />

        <Button
            Command="{Binding AdministrarCitasCommand}"
            HorizontalOptions="CenterAndExpand"
            Text="Administrar citas"
            VerticalOptions="Center" />
        <Button
            Command="{Binding ListadoPacientesCommand}"
            HorizontalOptions="CenterAndExpand"
            Text="Administrar pacientes"
            VerticalOptions="End" />
        <Button
            Command="{Binding AdministrarPrescripCommand}"
            HorizontalOptions="CenterAndExpand"
            Text="Administrar Prescripciones"
            VerticalOptions="End" />
    </VerticalStackLayout>
</ContentPage>
